    printf("РађРађРађРађРађРађРађРађРађРађРађРађРаѕРбІРБІРб╗РаЄРБ┐РБаРађРбЎРБЕРб┐РБЮРаЎРађРађРБЙРаІРб╗РАєРбИРАЄРађРБІРБІРБ╗РАЌРБ║РАЮРађРаЎРаЏРБ»Рб│РАЮРА«РАЄРбИРА»РадРБ┐РаЂРБ┐РбцРађРБ┐РБЅРБ╣РАєРБюРАЄРађРађРађРађРађРађРађРађРађРађРађРађ\n");
    printf("РађРађРађРађРађРађРађРађРађРађРађРађРа░Ра╝РаДРаГРАцРБ┐РађРБаРБЏРБѕРБђРБЅРБЎРБЦРађРаЏРаХРа║РаЃРбИРАЄРађРа╗Ра▓Ра┤Ра╝Ра▒РАЈРађРбђРБ╝РаъРбИРАЮРБйРАѓРаўРбЎРБњРБЏРБђРБЪРађРбаРагРБгРАгРбгРб▒РАЄРађРађРађРађРађРађРађРађРађРађРађРађ\n");
    printf("РађРађРађРађРађРађРађРађРађРађРађРађРађРб░РБЪРаІРбЏРБХРађРађРаЅРаЅРБЙРаЅРаЂРађРађРађРБ┐РАђРБђРбѕРАЂРађРађРаЏРаЏРаЏРбФРбЌРађРаЅРаЂРађРбИРАјРБЙРАѓРађРбИРАГРаГРахРа╗РађРађРб░РбДРАЂРБђРбўРАЂРађРађРађРађРађРађРађРађРађРађРађРађ\n");
    printf("РађРађРађРађРађРађРађРађРађРађРађРађРађРађРаЅРаІРаІРађРађРађРађРађРаЅРађРађРађРађРађРаЅРаЅРаЅРаЅРаѕРађРађРађРађРађРаѕРаЂРађРађРађРађРаѕРаѕРаѕРађРађРаѕРаЅРаЅРаЅРаЅРађРађРаѕРаЅРаѕРаЅРаЅРађРађРађРађРађРађРађРађРађРађРађРађРађ\n");
    printf("РађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађРађ\n");

    // в│ђВѕў ВёцВаЋ
    char name[20];
    float event_Exp = 0;                        // Ж░Ђ вЇўВаёвДѕвІц в░юВЃЮьЋю Ж▓йьЌўВ╣ў
    float Exp = 0;                              // Ж▓йьЌўВ╣ў В░й
    float Exp_box = 30000;                      // ваѕв▓еВЌЁВЌљ ьЋёВџћьЋю Ж▓йьЌўВ╣ўвЪЅ (1ваѕв▓еВЮ╝вќё 3вДї Ж│аВаЋ)
    float Prev_Exp_box = 30000;                 // ВЮ┤Ваёваѕв▓е Ж▓йьЌўВ╣ўвЪЅ в│┤Ж┤ђ в│ђВѕў
    int level = 1;
    int turn = 1;                               // ьё┤ Вѕў В▓┤ьЂг
    int user;                                   // Ж▓їВъёВДёьќЅ в░Ев▓Ћ ВаЋьЋўвіћ в│ђВѕў
    int stage = 0;                              // 1~5вІеЖ│ё ВіцьЁїВЮ┤ВДђ
    int event = 0;                              // вІеЖ│ё вѓ┤ ВЮ┤в▓цьіИ
    int monster_number = 0;                     // вфгВіцьё░вЦ╝ въювЇцВю╝вАю вйЉЖИ░ ВюёьЋю вїђВъЁ ВЌ░Вѓ░Въљ
    int monster_WN = 0;                         // вфгВіцьё░ ВЋйВаљВЮё въювЇцВю╝вАю вйЉЖИ░ ВюёьЋю вїђВъЁ ВЌ░Вѓ░Въљ

    srand(time(NULL));                          // въювЇц в│ђВѕў ВІюЖ░ёВЮё ВЮ┤ВџЕьЋ┤ Ж│ёВєЇ В┤ѕЖИ░ьЎћ
    
    printf("ВЌгЖИ░віћ ьЮћвЊцвдгвіћ Ж░юв░юВЏљВъЁвІѕвІц.\n");
    printf("вІ╣ВІаВЮў ВЮ┤вдёВЮё ВъЁваЦьЋўВёИВџћ.\n");
    scanf("%s", name);
    printf("[%s]вІў ВЋѕвЁЋьЋўВёИВџћ! вІ╣ВІаВЮђ Ж░юв░юВЏљВЌљ Ж░љЖИѕвІ╣ьќѕВіхвІѕвІц.!\n", name);
    printf("ьЃѕВХюьЋўвацвЕ┤ [99]ваѕв▓еВЮё вІгВё▒ьЋўВёИВџћ.\n");
    printf("Tip : ВЋёвЕћвдгВ╣┤вЁИвЦ╝ ВѕўьўѕьЋўВёИВџћ!\nВёГВиеВІю вЈёьЋЉьџеЖ│╝вАю ВъаВІювЈЎВЋѕ ьќЅв│хьЋ┤ВДѕВѕў ВъѕВіхвІѕвІц(В░ЕЖ░ЂВъЁвІѕвІц.)\n\n");
    while(1)                                    // вѓўВцЉВЌљ tureвАю вг┤ьЋюв░ўв│хьЋ┤Вёю 99ваЎВЮ┤вѓў 1ваЎ ВЮ┤ьЋўВЮ╝вЋї вИїваѕВЮ┤ьЂгвАю вѓўВўцВъљ
    {
        if(level == 1)
        {
            Exp_box = 30000;                    // ваѕв▓еВЮ┤ 1ВЮ┤ вљўвЕ┤ Ж▓йьЌўВ╣ўьЋёВџћвЪЅ 3вДї Ж│аВаЋ
        }

        for(stage = 1; stage <= 5; stage++)              // ВіцьЁїВЮ┤ВДђ 1вІеЖ│ёвХђьё░ 5вІеЖ│ёЖ╣їВДђ
        {
            for(event = 0; event < 5; event++)                // вІеЖ│ё вѓ┤ ВЮ┤в▓цьіИ 
            {          
                event_Exp = Exp_rand;                         // -3500 ~ +3500Ж╣їВДђ въювЇцьЋўЖ▓ї вйЉВЋёВцђвІц
                Exp += event_Exp;                             // в░юВЃЮьЋю Ж▓йьЌўВ╣ў вѕёВаЂ

                char monster_information[70];
                monster_number = (rand() % 4) +1;
                if(monster_number == 1)
                {
                    char monster_information[70] = "Captain Ddong";
                }
                else if(monster_number == 2)
                {
                    char monster_information[70] = "Scarlet Onsi";
                }
                else if(monster_number == 3)
                {
                    char monster_information[70] = "Iron Boy";
                }
                else
                {
                    char monster_information[70] = "Juno Panther";
                }
                printf("%dвЇўВаё) %sЖ░ђ вѓўьЃђвѓгВіхвІѕвІц.\n", event+1, monster_information);

                char monster_week[20];
                monster_WN = (rand() % 4) +1;
                if(monster_WN == 1)
                {
                    char monster_week[20] = "ВўцвЦИВєљ";
                }
                else if(monster_WN == 2)
                {
                    char monster_week[20] = "ВЎ╝Вєљ";
                }
                else if(monster_WN == 3)
                {
                    char monster_week[20] = "ВўцвЦИв░ю";
                }
                else
                {
                    char monster_week[20] = "ВЎ╝в░ю";
                }
                printf("       (Tip: %sВЮ┤ ВЋйВаљВъЁвІѕвІц.)\n", monster_week);

                    if (event_Exp >= 0)
                    {
                        printf("       %sвЦ╝ В▓ўВ╣ўьЋўВўђВіхвІѕвІц.\n", monster_information);
                        printf("       ­Ъњќ   %.2fВЮў Ж▓йьЌўВ╣ўвЦ╝ ьџЇвЊЮьќѕВіхвІѕвІц.\n\n", event_Exp);
                    }
                    else
                    {
                        printf("       %sвЦ╝ В▓ўВ╣ўьЋўВДђ вф╗ ьќѕВіхвІѕвІц.\n", monster_information);
                        printf("       ­Ъњћ   %.2fВЮў Ж▓йьЌўВ╣ўЖ░ђ В░еЖ░љвљўВЌѕВіхвІѕвІц.\n\n", event_Exp);
                    }
                if(event == 4) // вІеЖ│ё вѓ┤ ВЮ┤в▓цьіИ (6в▓ѕВДИ-в│┤Віц)
                {
                    printf("в│┤Віц вфгВіцьё░ РџАРџАРџА   в»╝Ж▒┤ ВіцьіИваѕВЮИВДђ    РџАРџАРџАЖ░ђ вЊ▒ВъЦ ьќѕВіхвІѕвІц.\n");
                    Exp = Exp * Boss_rand;                  // ЖИ░ВА┤ expВЌљ в│┤Віц ВХћЖ░ђЖ▓йьЌўВ╣ўЖ│▒ 1.0~5.0въювЇцьЋю Ж░њ Ж│▒
                }
            }

            while(Exp > Exp_box)                             // ваѕв▓еВЌЁ!
            {
                printf("ВХЋьЋўьЋЕвІѕвІц ваѕв▓еВЌЁ ьЋўВЁеВіхвІѕвІц!\n");
                printf("#$%%^^*ВДђЖИѕвІ╣ВъЦ Вё▒ВъЦ ьїеьѓцВДђ ЖхгвДц!\n");
                level++;

                Exp = Exp - Exp_box;                    // В┤ѕЖ│╝ Ж▓йьЌўВ╣ў ВЮ┤ВЏћ
                Exp_box = Exp_box * Exp_boxrand;
                printf("ваѕв▓е ВЌЁ!\nьўёВъг %dваѕв▓еВъЁвІѕвІц.\n", level); 
                printf("%dваѕв▓еВЌљ ьЋёВџћьЋю Ж▓йьЌўВ╣ўвіћ %.2fВъЁвІѕвІц.\n", level+1 ,Exp_box);

                if(level == 99)                                  // 99ваЎВЮ┤ВЃЂВЮ┤вЕ┤ ВбЁвБї
                {
                    break;
                }
            }
            
            while(Exp < Exp_box && Exp < 0)                         // Ж▓йьЌўВ╣ўЖ░ђ ВџћЖхгвЪЅв│┤вІц ВъЉЖ▒░вѓў ВЮїВѕўВЮ┤вЕ┤
            {
                printf("ВЮ┤вЪ░ ваѕв▓еВЮ┤ ьЋўвЮйьќѕВіхвІѕвІц. ВА░ВІгьЋўВІГВІюВџћ в│┤Віцвіћ Ж░ЋьЋЕвІѕвІц.\n");
                printf("ьїЂ : IRON вфгВіцьё░віћ ВўцвЦИВєљВЮ┤ ВЋйВаљВъЁвІѕвІц.\n");
                level--;
                Exp = Exp_box - Exp;                                
                Exp_box = Exp_box / Exp_boxrand;                    // Ж▓йьЌўВ╣ў ВџћЖхгвЪЅ Ж░љВєї
                printf("ваѕв▓е вІцВџ┤!\nьўёВъг %dваѕв▓еВъЁвІѕвІц.\n", level);
            }
            turn++;                                          // ьё┤ Вѕў ВдЮЖ░ђ
            printf("\n");

            printf("ьўёВъг Ж▓йьЌўВ╣ўвіћ %.2f ВъЁвІѕвІц.\n",Exp);
            printf("%dваѕв▓еВъЁвІѕвІц.\n", level);
            printf("ВДђЖИѕЖ╣їВДђ %dьё┤ВЮ┤ ВДёьќЅвљгВіхвІѕвІц.\n", turn);
            printf("ВДёьќЅВцЉВЮИ ВіцьЁїВЮ┤ВДђвіћ %dВъЁвІѕвІц.", stage);
            printf("вІцВЮї вфеьЌўВЮё ВДёьќЅьЋўвацвЕ┤ 1ВЮё ВъЁваЦ\nвЕ┤ьЂ┤вдгВќ┤ьЋю ВіцьЁїВЮ┤ВДђвАю вЈїВЋёЖ░ёвІцвЕ┤ 2вЦ╝ ВъЁваЦ\nьЂ┤вдгВќ┤ьЋю ВіцьЁїВЮ┤ВДђВЮў ВЮ┤Ваё ВіцьЁїВЮ┤ВДђвАю вЈїВЋёЖ░ђЖИИ ВЏљьЋювІцвЕ┤ 3ВЮё ВъЁваЦ:\n");
            scanf("%d", &user);
            
            if (user == 1)
            {
                printf("вІцВЮї вфеьЌўВЮё ВДёьќЅьЋЕвІѕвІц.\n");
                    continue;
            }
            else if(user == 2)
            {
                printf("ьЋ┤вІ╣ ьџїВ░евЦ╝ вІцВІю вЈёВаёьЋЕвІѕвІц.\n");
                --stage;
                    continue;
            }
            else
            {
                printf("ВЮ┤Ваё ьџїВ░евЦ╝ вЈёВаёьЋЕвІѕвІц.\n");
                --stage;
                --stage;
                if(stage <=-1)              // stageЖ░ђ ВЮїВѕўвАю вљўвіћ Ж▓ЃВЮё вДЅЖИ░ ВюёьЋю ВъЦВ╣ў
                {
                    stage = 0;
                }
                    continue;
            }

            if(level == 99)                                  // 99ваЎВЮ┤ВЃЂВЮ┤вЕ┤ ВбЁвБї
            {
                break;
            }
            else if(level < 1)                  // 1ваЎВЮ┤вЕ┤Вёю Ж▓йьЌўВ╣ўЖ░ђ ВЮїВѕўвЕ┤ ьїев░░
            {
                break;
            }

            printf("\n");

        }
        printf("\n");

        if(level == 99)                                  // 99ваЎВЮ┤ВЃЂВЮ┤вЕ┤ ВбЁвБї
        {
            printf("ВаёВёцВЮў ВХюьўё! Ж░юв░юВЏљ ВаЋв│х!\n");
            break;
        }
        else if(level < 1)                  // 1ваЎВЮ┤вЕ┤Вёю Ж▓йьЌўВ╣ўЖ░ђ ВЮїВѕўвЕ┤ ьїев░░
        {
            printf("YOU DIE\n");
            break;
        }

    }
    // printf("%d\n", Exp);
    printf("ВбЁвБї!");
    return 0;
}
