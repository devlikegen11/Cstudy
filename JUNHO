#include<stdio.h>
#include <stdlib.h>                          // 랜덤함수 헤더파일
#define Exp_boxrand (((float)(rand() % 7)  / 10) + 1.8)
#define Exp_rand rand() % 7001 - 3500
#define Boss_rand (((float)(rand() % 40) / 10) + 1)
int main()
{
    // 변수 설정
    char name[20];
    float Exp = 0;
    float Exp_box = 30000;
    int level = 0;

    while(level < 2)                    // 나중에 ture로 무한반복해서 99렙이나 1렙 이하일때 브레이크로 나오자
    {
        for(int stage = 1; stage < 6; stage++)
        {
            for(int event = 0; event < 5; event++)
            {          
                Exp = Exp_rand;         // -3500 ~ +3500까지 랜덤하게 뽑아준다
                printf("%d\n", Exp);

                if(event == 4)
                {
                    Exp = Exp_rand;
                    Exp = Exp * Boss_rand;   // 기존 exp에 보스 추가경험치곱 1.0~5.0래덤한 값 곱
                    printf("보스의 경험치는 %.1f입니다.\n", (float)Exp);
                }
            }
        }
        level++;
        printf("\n");
    }
    // printf("%d\n", Exp);
    printf("종료!");
    return 0;
}

#include<stdio.h>
#include <stdlib.h>                          // 랜덤함수 헤더파일
#define Exp_boxrand (((float)(rand() % 7)  / 10) + 1.8)
int main()
{
    int level = 1;
    float Exp_box = 30000;
    float Exp = 30005;        //예를 든거임

    while(level != 99)
    {
        if(level >= 1 && Exp >= 30000)
        {
            level++;
            Exp = Exp - Exp_box;
            Exp_box = Exp_box * Exp_boxrand;
        }
        else
        {
            break;
        }
    }
    printf("level: %d       경험치 총 수치: %.2f      현재의 수치:%.2f\n", level, Exp_box, Exp);
    return 0;
}
